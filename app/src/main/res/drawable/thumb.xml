<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="#FFB400"/>
           <stroke android:color="#FFB400"
               android:width="1dp"/>
            <size android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"/>
        </shape>
    </item>

    <item
        android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="#41000000"/>
            <stroke android:color="#41000000"
                android:width="1dp"/>
            <size android:width="@dimen/_20sdp"
                android:height="@dimen/_20sdp"/>
        </shape>
    </item>

</selector>