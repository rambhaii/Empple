<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurry"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:fontFamily="@font/josefin_sans"
            android:textColor="@color/black"
            android:textSize="@dimen/_30sdp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passchange"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/josefin_sans"
            android:layout_margin="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"/>




        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/oldpass"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:hint="Old Password"
            android:backgroundTint="@color/teal_700"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textSize="@dimen/_14sdp"
            android:background="@drawable/linespacing"/>
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="@dimen/_320sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:weightSum="2"
            android:orientation="horizontal">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">
            <EditText
                android:id="@+id/newpass"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp"
                android:hint="New Password"
                android:backgroundTint="@color/teal_700"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_150sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/linespacing"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

              <EditText
                android:id="@+id/confirmpass"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:hint="Confirm Password"
                android:padding="@dimen/_10sdp"
                android:backgroundTint="@color/teal_700"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/josefin_sans"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/linespacing"
                  android:layout_marginTop="@dimen/_15sdp"/>
            </com.google.android.material.textfield.TextInputLayout>




        </LinearLayout>

        <Button
            android:id="@+id/btnconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_35sdp"
            android:text="Confirm"
            android:fontFamily="@font/josefin_sans"
            android:textSize="@dimen/_12sdp"
            android:textColor="#1200FF"
            android:background="@drawable/ic_forgetp"/>









    </LinearLayout>
    </eightbitlab.com.blurview.BlurView>


</RelativeLayout>