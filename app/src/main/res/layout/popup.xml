<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet"
    android:background="@color/whitetr"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/success"
        android:layout_marginTop="@dimen/_60sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/josefin_sans"
        android:text="Your new Account has \n been created"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#370D9A"
        android:textSize="@dimen/_18sdp"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/josefin_sans"
        android:text="Your New User Id :"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#370D9A"
        android:textSize="@dimen/_16sdp"></TextView>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/josefin_sans"
        android:text="Your New Password :"
        android:textAlignment="center"
        android:textColor="#370D9A"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold"></TextView>
    <Button
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_40sdp"
        android:text="Close"
        android:fontFamily="@font/josefin_sans"
        android:textStyle="bold"
        android:id="@+id/btnclose"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/ic_sign"
        android:textColor="@color/violet"
        android:layout_marginBottom="@dimen/_150sdp"
        />
</LinearLayout>