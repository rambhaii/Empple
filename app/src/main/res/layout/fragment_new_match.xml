<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:layout_height="match_parent"
    tools:context=".Reference_List">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Match"
            android:fontFamily="@font/josefin_sans"
            android:textStyle="bold"
            android:textColor="@color/newmatch"
            android:textSize="@dimen/_18ssp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_feather_filter"
            android:layout_alignParentEnd="true"
            android:id="@+id/filter"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_13sdp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/josefin_sans"
            android:id="@+id/tvnewmatch"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:layout_marginStart="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Match"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_8ssp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right "
                android:fontFamily="@font/josefin_sans"
                android:textSize="@dimen/_18ssp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:layout_marginLeft="@dimen/_50sdp"
                android:fontFamily="@font/josefin_sans"
                android:text="Left " />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/josefin_sans"
                android:id="@+id/tvrightmatch"
                android:textSize="@dimen/_18ssp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:id="@+id/tvleftmatch"
                android:fontFamily="@font/josefin_sans"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginRight="@dimen/_8sdp"
                android:text="0" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/josefin_sans"
            android:id="@+id/tvtotalmatch"
            android:textSize="@dimen/_14ssp"
            android:layout_marginStart="@dimen/_23sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Match"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginStart="@dimen/_20sdp"
            android:textSize="@dimen/_8ssp"
            />
    </LinearLayout>
</LinearLayout>