<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@drawable/bckroundmain"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blurView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@drawable/photoppl" />

            <TextView
                android:id="@+id/signtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:gravity="start"
                android:text="Welcome back!"
                android:layout_marginTop="@dimen/_30sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_30sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/linespacing"
                    android:backgroundTint="@color/teal_700"
                    android:drawableStart="@drawable/ic_baseline_perm_identity_24"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/josefin_sans"
                    android:hint="@string/hintusername"
                    android:padding="@dimen/_5sdp"
                    android:textColorHint="#65656565"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/pass_word"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:hint="@string/hintpassword"
                    style="@style/edittexthint"
                    app:hintTextColor="#65656565"
                    android:inputType="textPassword"
                    android:fontFamily="@font/josefin_sans"
                    android:backgroundTint="@color/teal_700"
                    android:drawablePadding="@dimen/_5sdp"
                    android:background="@drawable/linespacing"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:drawableStart="@drawable/ic_baseline_lock_open_24"

                    />
         </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/forgot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/josefin_sans_semibold"
                android:text="Forgot Password?"
                android:textColor="#006EFF"
                android:textSize="@dimen/_12ssp">

            </TextView>


            <Button
                android:id="@+id/btnsignin"
                style="@style/Heading"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/ic_sign"
                android:fontFamily="@font/josefin_sans"
                android:paddingTop="@dimen/_6sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5ssp"
                android:paddingBottom="@dimen/_3sdp"
                android:text="SIGN IN"
                android:textColor="@color/primarydark"
                android:textSize="@dimen/_12sdp" />






            <LinearLayout
                android:id="@+id/relativedesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/a1"
                    style="@style/Heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:text="Don't have an account?"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/josefin_sans_semibold"
                    android:text="SIGN UP"
                    android:textColor="#006EFF"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>



            <RelativeLayout
                android:id="@+id/transitionsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/signindesgn"
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_120sdp"
                    android:src="@drawable/designsign" />


            </RelativeLayout>

        </LinearLayout>
    </eightbitlab.com.blurview.BlurView>

</RelativeLayout>