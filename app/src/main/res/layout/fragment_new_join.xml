<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/_20sdp"
    android:layout_height="match_parent"
    tools:context=".Reference_List">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Join"
            android:fontFamily="@font/josefin_sans"
            android:textStyle="bold"
            android:textColor="@color/newjoin"
            android:textSize="@dimen/_18ssp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_icon_feather_filter"
            android:layout_alignParentEnd="true"
            android:id="@+id/filter"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_13sdp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/josefin_sans"
            android:id="@+id/tvnewjoin"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:layout_marginStart="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Join"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginStart="@dimen/_20sdp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginStart="@dimen/_100sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/josefin_sans"
                android:layout_height="wrap_content"
                android:text="Right "
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/josefin_sans"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/dotimg"
                android:drawableTint="@color/green"
                android:id="@+id/verifyright"
                android:textSize="@dimen/_18ssp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:drawableTint="@color/red"
                android:layout_height="wrap_content"
                android:id="@+id/nonverifyright"
                android:text="0"
                android:fontFamily="@font/josefin_sans"
                android:drawablePadding="@dimen/_4sdp"
                android:textSize="@dimen/_18ssp"
                android:drawableStart="@drawable/dotimg"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/_100sdp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Left "
                android:fontFamily="@font/josefin_sans"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/josefin_sans"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableTint="@color/green"
                android:drawableStart="@drawable/dotimg"
                android:id="@+id/verifyleft"
                android:textSize="@dimen/_18ssp"

                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:fontFamily="@font/josefin_sans"
                android:drawablePadding="@dimen/_4sdp"
                android:drawableStart="@drawable/dotimg"
                android:id="@+id/nonverifyleft"
                android:textSize="@dimen/_18ssp"
                android:drawableTint="@color/red"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:fontFamily="@font/josefin_sans"
            android:id="@+id/tvtotaljoin"
            android:textSize="@dimen/_14sdp"
            android:layout_marginStart="@dimen/_18sdp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Join"
            android:fontFamily="@font/josefin_sans"
            android:textSize="@dimen/_8ssp"
            android:layout_marginStart="@dimen/_20sdp"

            />
    </LinearLayout>
</LinearLayout>