<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Empeople" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Heading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:fontFamily">@font/josefin_sans_bold </item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="fontWeight">70</item>
    </style>

    <style name="Description">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="ButtomSheetDailog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/modal</item>
        <item name="android:windowActivityTransitions">true</item>

    </style>

    <style name="modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/blurbackground</item>

    </style>

    <style name="edittexthint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:backgroundTint">@drawable/ettextback</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>


    </style>

    <style name="Theme.Empeople.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="underline" parent="AppBaseTheme">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Theme.Emppl..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup</item>
        <item name="android:windowExitAnimation">@anim/slidedown</item>
    </style>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="JosefinSans">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>





</resources>